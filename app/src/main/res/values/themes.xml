<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme: Material3, flat, custom background/text -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/bg_all</item>
        <item name="colorSurface">@color/bg_all</item>
        <item name="colorOnSurface">@color/display_primary</item>
        <item name="android:statusBarColor">@color/bg_all</item>
        <item name="android:navigationBarColor">@color/bg_all</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <!-- Calculator Key Styles -->
    <style name="CalcKey.Base" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/key_height</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">@dimen/key_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="CalcKey.Digit" parent="CalcKey.Base">
        <item name="backgroundTint">@color/key_digit_bg</item>
        <item name="android:textColor">@color/key_digit_text</item>
        <item name="android:textSize">@dimen/digit_text_size</item>
        <item name="background">@drawable/key_bg_digit</item>
    </style>

    <style name="CalcKey.Op" parent="CalcKey.Base">
        <item name="backgroundTint">@color/key_op_bg</item>
        <item name="android:textColor">@color/key_op_text</item>
        <item name="android:textSize">@dimen/op_text_size</item>
        <item name="background">@drawable/key_bg_op</item>
    </style>

    <style name="CalcKey.Util" parent="CalcKey.Base">
        <item name="backgroundTint">@color/key_util_bg</item>
        <item name="android:textColor">@color/key_util_text</item>
        <item name="android:textSize">@dimen/op_text_size</item>
        <item name="background">@drawable/key_bg_util</item>
    </style>

    <style name="CalcKey.Accent" parent="CalcKey.Base">
        <item name="backgroundTint">@color/key_accent_bg</item>
        <item name="android:textColor">@color/key_accent_text</item>
        <item name="background">@drawable/key_bg_accent</item>
    </style>
</resources>